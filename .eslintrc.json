{
  "env": {
    "node": true,
    "es2020": true
  },
  "plugins": [
    "prettierx",
    "promise"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:prettierx/standardx",
    "plugin:promise/recommended"
  ],
  "rules": {
    "prettierx/options": [
      "error",
      {
        "printWidth": 92
      }
    ]
  },
  "ignorePatterns": ["**/dist/*"],
  "overrides": [
    {
      "files": [
        "**/test/*.test.js"
      ],
      "env": {
        "mocha": true
      }
    }
  ]
}